<%- include("../partials/header") %>

<div class="container" >
    <h1 style="text-align: center;">Edit Comment</h1>
    <div class="row">
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id%>" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
                </div>
                <div class="form-group ">
                    <button type="submit" class="btn btn-lg btn-primary" style="width: 100%;">Submit</button>
                </div>
            </form>
        </div>
    </div>
    <p style="text-align: center;">
        <a href="/campgrounds">Go back to campgrounds page</a>
    </p>
</div>


<%- include("../partials/footer") %>